%Variables
PACKAGE_TYPE: 'DPKG'

%Dependencies

%Preuninstall_100
if [ "$1" = "remove" ]; then
    /opt/microsoft/auoms/bin/auomsctl disable
fi

%Postuninstall_100
if [ "$1" = "purge" ]; then
    if [ -e ${{AUOMS_AUDISP_CONF}} ]; then
        rm ${{AUOMS_AUDISP_CONF}}
    fi
    rm -rf ${{AUOMS_ETC}}
    rm -rf ${{AUOMS_VAR}}
fi

%Postinstall_100
/opt/microsoft/auoms/bin/auomsctl is-enabled >/dev/null 2>&1
if [ $? -eq 0 ]; then
    /opt/microsoft/auoms/bin/auomsctl restart all
fi
